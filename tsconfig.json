{
  "compilerOptions": {
    "target": "es5",   
    "module": "commonjs", 
    "rootDir": "./",
    "baseUrl": "./src",
    "paths": {
        "@modules/*": ["modules/*"],
        "@config/*": ["config/*"],
        "@shared/*": ["shared/*"],
        "@errors/*": ["errors/*"],
        "@utils/*": ["utils/*"],
        "@routes/*": ["routes/*"],
        "@middlewares/*": ["middlewares/*"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}
